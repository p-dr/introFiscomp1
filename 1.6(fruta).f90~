


program media
	implicit none 

	integer i,n      
	parameter (n=100)  
	real*8 lista(n),ma,mg,dp
	
	open(10,file='lista.in') 
	do i=1,n
	 read(10,*)lista(i)
	enddo
	close(10) 

	write(*,*)"VALORES ALEATÓRIOS",lista

	call calcma(ma,lista,n) 
	write(*,*)"MÉD. ARITMÉTICA",ma

	call calcmg(mg,lista,n) 
	write(*,*)"MÉD GEOMÉTRICA",mg

	call calcdp(dp,lista,n)
	write(*,*)"DESVIO PADRÃO",dp
	end

!!!!!!!!!!!!!!!!subrotinas!!!!!!!!!!!!!!!!!!!

	subroutine calcma(ma,lista,n)
	integer i,n
	real*8 ma,lista(n)
	ma=0

	do i=1,n
		ma=ma+(lista(i)/n)
	enddo

	return
	end

!!!!!!!!!!!!!!!!!!!!

	subroutine calcmg(mg,lista,n)
	integer i,n
	real*8 mg,lista(n)
	mg=1

	do i=1,n
		mg=mg*lista(i)
	enddo

	mg=mg**(1/dfloat(n))

	return
	end

!!!!!!!!!!!!!!!!!!!

	subroutine calcdp(dp,lista,n)
	integer i,n
	real*8 dp,lista(n),listaquad(n),a,b

	do i=1,n
		listaquad(i)=lista(i)**2
	end do

	call calcma(a,listaquad,n)
	call calcma(b,lista,n)

	dp=sqrt(a-(b**2))

	return
	end
!!!ma!=mg se a lista for composta por números não iguais
